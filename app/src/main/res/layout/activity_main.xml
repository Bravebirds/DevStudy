<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <RadioGroup
        android:layout_centerVertical="true"
        android:id="@+id/radio_group_vp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:background="@color/colorWhitesmoke">

        <RadioButton
            android:id="@+id/home_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/homepage_btn_bg"
            android:background="@drawable/ripple_btn_red"
            android:gravity="center_horizontal"
            android:drawablePadding="6dp"
            android:text="首页"
            android:textColor="@drawable/textcolor_bottom_main"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/find_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/findpage_btn_bg"
            android:background="@drawable/ripple_btn_red"
            android:gravity="center_horizontal"
            android:drawablePadding="6dp"
            android:text="发现"
            android:textColor="@drawable/textcolor_bottom_main"
            android:textSize="12sp"  />


        <RadioButton
            android:id="@+id/video_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/videopage_btn_bg"
            android:background="@drawable/ripple_btn_red"
            android:gravity="center_horizontal"
            android:drawablePadding="6dp"
            android:text="视频"
            android:textColor="@drawable/textcolor_bottom_main"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/my_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/mypage_btn_bg"
            android:background="@drawable/ripple_btn_red"
            android:gravity="center_horizontal"
            android:drawablePadding="6dp"
            android:text="我"
            android:textColor="@drawable/textcolor_bottom_main"
            android:textSize="12sp"  />

    </RadioGroup>


</LinearLayout>