<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Banner">
        <!--轮播间隔时间 -->
        <attr name="loop_time" format="integer"/>
        <!--banner圆角半径-->
        <attr name="banner_radius" format="dimension"/>

        <!--指示器默认的宽度，默认5dp （对RoundLinesIndicator无效）-->
        <attr name="indicator_normal_width" format="dimension"/>
        <!--指示器选中的宽度，默认0x88ffffff-->
        <attr name="indicator_selected_width" format="dimension"/>

        <!--指示器默认颜色，默认0x88ffffff-->
        <attr name="indicator_normal_color" format="color"/>
        <!--指示器选中颜色，默认0x88000000-->
        <attr name="indicator_selected_color" format="color"/>

        <!--指示器之间的间距，默认5dp （对RoundLinesIndicator无效）-->
        <attr name="indicator_space" format="dimension"/>
        <!--指示器位置，默认center-->
        <attr name="indicator_gravity" format="dimension"/>
        <!--指示器的margin,默认5dp，不能和下面的同时使用-->
        <attr name="indicator_margin" format="dimension"/>
        <!--指示器右边的margin-->
        <attr name="indicator_marginLeft" format="dimension"/>
        <!--指示器左边的margin-->
        <attr name="indicator_marginRight" format="dimension"/>
        <!--指示器上边的margin-->
        <attr name="indicator_marginTop" format="dimension"/>
        <!--指示器下边的margin-->
        <attr name="indicator_marginBottom" format="dimension"/>
        <!--指示器高度（对CircleIndicator无效）-->
        <attr name="indicator_height" format="dimension"/>
        <attr name="indicator_width" format="dimension"/>
        <!--指示器圆角（对CircleIndicator无效）-->
        <attr name="indicator_radius" format="dimension"/>
    </declare-styleable>
</resources>